{
  "name": "poly-81",
  "private": true,
  "workspaces": [
    "web/*"
  ],
  "scripts": {
    "bootstrap": "conformal-scripts bootstrap",
    "ci": "conformal-scripts ci",
    "check-lfs": "conformal-scripts check-lfs",
    "check-todo": "conformal-scripts check-todo",
